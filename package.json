{
  "name": "wp-theme-boilerplate",
  "version": "0.1.0",
  "description": "",
  "bugs": {
    "url": "https://github.com/thingsym/wp-theme-boilerplate/issues"
  },
  "homepage": "https://github.com/thingsym/wp-theme-boilerplate",
  "devDependencies": {
    "@wordpress/browserslist-config": "^2.2.2",
    "autoprefixer": "^9.4.0",
    "browser-sync": "^2.26.3",
    "chokidar-cli": "^1.2.1",
    "jshint": "^2.9.6",
    "jshint-stylish": "^2.2.1",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.1",
    "rtlcss": "^2.4.0",
    "stylelint": "^9.9.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.4.0",
    "stylestats": "^7.0.2",
    "uglifyjs": "^2.4.11"
  },
  "rtlcssConfig": {
    "options": {
      "autoRename": false,
      "autoRenameStrict": false,
      "blacklist": {},
      "clean": true,
      "greedy": false,
      "processUrls": false,
      "stringMap": []
    },
    "plugins": [],
    "map": false
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-scss",
      "stylelint-config-recommended-scss"
    ]
  },
  "scripts": {
    "setup": "bash bin/setup.sh",
    "makepot": "php /usr/local/share/wp-i18n/makepot.php wp-theme ../wp-theme-boilerplate ../wp-theme-boilerplate/languages/wp-theme-boilerplate.pot",
    "msgfmt:ja": "msgfmt languages/ja.po -o languages/ja.mo",
    "msgfmt": "run-p \"msgfmt:*\"",
    "sass:style": "node-sass src/scss/style.scss css/style.css --output-style expanded && postcss --use autoprefixer --no-map -r css/style.css",
    "sass:style:minify": "node-sass src/scss/style.scss css/style.min.css --output-style compressed && postcss --use autoprefixer --no-map -r css/style.min.css",
    "sass:block-editor": "node-sass src/scss/block-editor-style.scss css/block-editor-style.css --output-style expanded && postcss --use autoprefixer --no-map -r css/block-editor-style.css",
    "rtlcss:rtl": "rtlcss css/style.css css/style-rtl.css",
    "minify:js": "uglifyjs js/customizer.js -o js/customizer.min.js & uglifyjs js/navigation.js -o js/navigation.min.js & uglifyjs js/skip-link-focus-fix.js -o js/skip-link-focus-fix.min.js",
    "build:css": "run-p \"sass:**\" \"rtlcss:rtl\"",
    "build:js": "run-p \"minify:js\"",
    "build": "run-p \"build:*\"",
    "lint:css": "stylelint \"css/*.css\" \"css/**/*.css\"",
    "lint:scss": "stylelint \"src/scss/*.scss\" \"src/scss/**/*.scss\"",
    "lint:js": "jshint --reporter=node_modules/jshint-stylish js/*.js",
    "lint": "run-p \"lint:*\"",
    "stats:css": "stylestats css/style.min.css & stylestats css/style-rtl.css & stylestats css/block-editor-style.css",
    "serve:sync": "browser-sync start --server --files \"css/*.min.css\" \"js/*.min.js\"",
    "serve:proxy": "browser-sync start --proxy \"vaw.local\" --https --files \"css/*.min.css\" \"js/*.min.js\"",
    "serve": "run-p \"watch\" \"serve:proxy\"",
    "watch:css": "chokidar \"src/scss/*.scss\" \"src/scss/**/*.scss\" -c \"npm run build:css\" --initial --polling",
    "watch:js": "chokidar \"js/*.js\" \"!js/*.min.js\" -c \"npm run build:js\" --initial --polling",
    "watch": "run-p \"watch:*\""
  }
}
